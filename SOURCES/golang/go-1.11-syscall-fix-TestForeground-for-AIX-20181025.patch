+++ b/src/syscall/exec_libc.go
@@ -124,14 +124,14 @@
 	}
 
 	if sys.Foreground {
-		pgrp := sys.Pgid
+		pgrp := _Pid_t(sys.Pgid)
 		if pgrp == 0 {
 			r1, err1 = getpid()
 			if err1 != 0 {
 				goto childerror
 			}
 
-			pgrp = int(r1)
+			pgrp = _Pid_t(r1)
 		}
 
